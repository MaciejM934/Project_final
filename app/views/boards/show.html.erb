<h1><%= @board.title %></h1>
<p><%= @board.content %></p>

<div>
  <% if user_signed_in? && @board.users.include?(current_user) %>
    <%= link_to "Edit this board", edit_board_path(@board) %> |
  <% end %>
  
  <%= link_to "Back to boards", boards_path %>

  <% if user_signed_in? && @board.users.include?(current_user) %>
    <%= button_to "Destroy this board", @board, method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
</div>
